{
  "name": "@hollowman6/canvas-ball",
  "version": "1.0.7",
  "description": "A colourful ball background drawn on canvas.(彩球运动背景插件)",
  "main": "canvas-ball.js",
  "dependencies": {
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  },
  "scripts": {
    "lint": "eslint .",
    "postinstall": "husky install",
    "pre-commit": "lint-staged && eslint . --fix"
  },
  "eslintConfig": {
    "plugins": [
      "prettier"
    ],
    "extends": [
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
      "**/*.min.js",
      "CV/pdfjs",
      "FreDuino/blockly-master"
    ],
    "rules": {
      "prettier/prettier": "error"
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "prettier/prettier": [
    "error",
    {
      "endOfLine": "auto"
    }
  ],
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/HollowMan6/canvas-ball.js.git"
  },
  "keywords": [
    "Canvas",
    "Ball"
  ],
  "author": "Hollow Man",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/HollowMan6/canvas-ball.js/issues"
  },
  "homepage": "https://github.com/HollowMan6/canvas-ball.js#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
